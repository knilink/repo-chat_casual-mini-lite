    "openai": "^4.96.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.32",
    "@tailwindcss/vite": "^4.1.4",
    "@types/chrome": "^0.0.316",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/webextension-polyfill": "^0.12.3",
    "@vitejs/plugin-react": "^4.4.1",
    "fs-extra": "^11.3.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
